<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>com.reservation.servlet.Servlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/main/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.reservation.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ForbiddenUserPageFilter</filter-name>
        <filter-class>com.reservation.controller.filter.UserPageFilter</filter-class>
        <init-param>
            <param-name>forbiddenPagesUser</param-name>
            <param-value><!--admin-personal-area,login,registration-form,admin-add-film,admin-add-room,
                admin-add-room-place,admin-personal-area,admin-session,admin-session-room,admin-show-all-films,
                unknown-session-room,index-->
            </param-value>
        </init-param>
        <init-param>
            <param-name>forbiddenPagesUnknown</param-name>
            <param-value><!--admin-personal-area,userDto-personal-area,admin-add-film,admin-add-room,admin-add-room-place,
                admin-personal-area, admin-session, admin-session-room, admin-show-all-films, userDto-session-room,
                userDto-session, userDto-personal-area, userDto-buy-history-->
            </param-value>
        </init-param>
        <init-param>
            <param-name>forbiddenPagesAdmin</param-name>
            <param-value>
              <!--  userDto-personal-area,login,registration-form,userDto-session-room,userDto-session,userDto-personal-area,userDto-buy-history,
                unknown-session-room,index-->
            </param-value>
        </init-param>
        <init-param>
            <param-name>allPages</param-name>
            <param-value>
      <!--          index,login,registration-form,admin-personal-area,userDto-personal-area,admin-add-film,admin-add-room,admin-add-room-place,
                admin-personal-area,admin-session,admin-session-room,admin-show-all-films,userDto-session-room,
                userDto-session,userDto-personal-area,userDto-buy-history,unknown-session-room-->
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ForbiddenUserPageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.reservation.controller.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>com.reservation.controller.filter.LocalizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>
            com.reservation.controller.listener.SessionListener
        </listener-class>
    </listener>

 <!--     <welcome-file-list>
          <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
      </welcome-file-list>-->

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

</web-app>
